    <RootNamespace>TauStellwerk.Test</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Config\testConfig.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Config\testConfig.json">
